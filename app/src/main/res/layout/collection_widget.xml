<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/widget_margin"
    android:id="@+id/master_widget">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#bbDEDFDE"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/widget_layout_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#aaDEDFDE"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/margin_5"
            android:paddingRight="@dimen/margin_5">
            <ImageView
                android:id="@+id/widget_img_launcher"
                android:layout_width="@dimen/width_32"
                android:contentDescription="@string/travel_widget_icon"
                android:layout_height="@dimen/width_32"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/ic_launcher"/>
            <TextView
                android:id="@+id/widget_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/travel_lite"
                android:layout_gravity="center_vertical"
                android:textColor="@android:color/black"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold"
                android:paddingStart="@dimen/padding_8"
                android:paddingLeft="@dimen/padding_8"
                android:paddingEnd="@dimen/padding_8"
                android:paddingRight="@dimen/padding_8"/>
        </LinearLayout>
        <ListView
            android:id="@+id/widget_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ListView>
    </LinearLayout>

</FrameLayout>